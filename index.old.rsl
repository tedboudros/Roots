<!doctype html>
<html lang="en" class="no-js">
<head>
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/manifest.json">
	<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#000000">
	<meta name="theme-color" content="#ffffff">
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="css/style.css"> <!-- Resource style -->
    <link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/font-awesome.css">
	<title>Scrolling effect</title>
</head>
<body>
<div id="container">
	<div style="background-color: black;" class="container-fluid">
	</div>
	<div style="background-color: gray;" class="container-fluid">
	</div>
	<div style="background-color: blue;" class="container-fluid">
	</div>
	<div style="background-color: green;" class="container-fluid">
	</div>
	<div style="background-color: purple;" class="container-fluid">
	</div>
	<div style="background-color: red;" class="container-fluid">
	</div>
	<nav>
		<button onclick="goup()"><i class="fa fa-arrow-up" aria-hidden="true"></i></button>
		<button onclick="godown()"><i class="fa fa-arrow-down" aria-hidden="true"></i></button>
	</nav>

</div>

	<script>
		var isScrolled = false;
		var time = 600;
		if (document.addEventListener) {
			document.addEventListener("mousewheel", MouseWheelHandler(), false);
			document.addEventListener("DOMMouseScroll", MouseWheelHandler(), false);
		} else {
			sq.attachEvent("onmousewheel", MouseWheelHandler());
		}

		function godown(){
			if(isScrolled == false){
				$('html, body').animate({
						scrollTop: ($(window).scrollTop() + $( window ).height())+'px'
				}, time);
				isScrolled = true;
				setTimeout(function(){isScrolled=false;},time*2);
			}
		}
		function goup(){
			if(isScrolled == false){
				$('html, body').animate({
						scrollTop: ($(window).scrollTop() - $( window ).height())+'px'
				}, time);
				isScrolled = true;
				setTimeout(function(){isScrolled=false;},time*2);
			}
		}
		function MouseWheelHandler() {
			return function (e) {
				// cross-browser wheel delta
				var e = window.event || e;
				var delta = Math.max(-1, Math.min(1, (e.wheelDelta || -e.detail)));

				
					//scrolling down?
					if (delta < 0) {
						//$('body').append("DOWN");
						godown();
					}
					//scrolling up?
					else {
						//$('body').append("UP");
						goup();
					}

				return false;
			}
		}
	</script>
	<script src="js/jquery-2.1.4.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.js"></script>
</body>
</html>